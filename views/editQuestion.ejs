<%- include ('partials/header') %>
<div class="col ">
  <h1 class="mx-auto text-center"><%= title %></h1>
  <div class="rwd-form col">
    <form  method="POST" action="<%= action %>" >
      <div class="form-group">
        <label for="query">Question</label>
        <input class="form-control" type="text" name="query" placeholder="How was your experience while working in Bangalore in an IT company?" autocomplete="off" required="" <% if(question) { %> value="<%= question.query %>" <% }%> >
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        <textarea class="form-control" type="text" rows = "5" name="answer" placeholder="For some it is Silicon valley of India, and for some it is Las Vegas of India For me its been 2.5 years i have been in Bangalore, working for TCS. While answering this question I will try to cover the maximum spectrum..."autocomplete="off" required="" ><% if(question) { %> <%= question.answer %> <% }%></textarea>
      </div>
      <div class="form-group">
        <label class="col-md-4" for="category">Category</label>
        <select id="category" class="col-md-8 form-control" name="category" required>
          <option value="--select--">All categories</option>
          <% categories.forEach( (category) => {%>
          <option value="<%= category %>"><%= category %>
          </option>
          <% } ) %>
        </select>
      </div>
      <div class="form-group">
        <label for="labels">Labels</label>
        <input class="form-control" type="text" name="labels" id="labels" placeholder="Banglore, Profession, IT" autocomplete="off" <% if(question) { %> value="<%= question.labels %>" <% }%>>
      </div>
      <div class="form-group">
        <button type="Submit" class="btn btn-md btn-primary btn-block">Submit!</button>
      </div>
    </form>
    
    <a class="row" href="/questions">Back</a>
  </div>
</div>
<%- include ('partials/footer') %>